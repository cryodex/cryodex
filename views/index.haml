%section#hero
  .row
    .large-10.large-centered.column.text-center
      #hero-message.fadeInDown.animated
        %h1 Secure your data in the cloud
        %h4 Transparent database encryption for developers
        %form#hero-signup-form.animated.fadeIn{ method: 'post', action: '/post' }
          %input{ type: 'email', name: 'email', placeholder: 'Your e-mail address', spellcheck: 'false', autocorrect: 'off', autocapitalize: 'off', autocomplete: 'off' }
          %a#herok-signup-button.button
            SIGN UP
            &nbsp;
            %i.icon-chevron-right.icon-white
